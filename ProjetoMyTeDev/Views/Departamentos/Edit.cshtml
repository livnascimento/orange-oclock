@model ProjetoMyTeDev.Models.Departamento

@{
    ViewData["Title"] = "Editar Departamento";
}



<h3>Editar Departamento</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DepartamentoId" />
            <div class="form-group">
                <label asp-for="DepartamentoNome" class="control-label"></label>
                <input asp-for="DepartamentoNome" class="form-control" />
                <span asp-validation-for="DepartamentoNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-secondary my-4" />
                <a asp-area="" asp-controller="Departamentos" asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
