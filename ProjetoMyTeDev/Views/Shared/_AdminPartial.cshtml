    <ul class="ms-auto navbar-nav flex-grow-1">
        @if (SignInManager.IsSignedIn(User))
        {
            @if (User.Identity.Name == "admin@avanade.com")
            {
                <li class="nav-item">
                    <div class="dropdown">
                        <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Área do Administrador
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Departamentos" asp-action="Index">Gerenciar Departamento</a></li>
                            <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Wbss" asp-action="Index">Gerenciar WBS</a></li>
                            <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Cargos" asp-action="Index">Gerenciar Cargos</a></li>
                            <li><a class="dropdown-item text-dark" asp-area="" asp-controller="Home" asp-action="Funcionario">Gerenciar Funcionários</a></li>
                            <li><a class="dropdown-item text-dark" asp-area="" asp-controller="RegistroDiarios" asp-action="RelatorioRegistro">Relatório WBS Geral</a></li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <div class="dropdown">
                        <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Área do Funcionário
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item text-dark" asp-area="" asp-controller="RegistroDiarios" asp-action="Create">Registrar Minhas Horas</a></li>
                            <li><a class="dropdown-item text-dark" asp-area="" asp-controller="RegistroDiarios" asp-action="RelatorioRegistroFunc">Meu Relatório WBS</a></li>
